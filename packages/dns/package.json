    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "per-file": true
  },
  "mocha": {
    "require": [
      "ts-node/register"
    ],
    "extension": [
      "ts"
    ],
    "spec": "__tests__/**/*.test.ts"
  },
