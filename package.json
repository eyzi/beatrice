{
  "name": "beatrice",
  "version": "0.0.0",
  "description": "Home Server",
  "main": "index.js",
  "scripts": {
    "build": "yarn build:common && lerna run build --parallel",
    "build:common": "lerna run build:common --parallel",
    "build:install": "lerna bootstrap && yarn build",
    "build:test": "yarn build && yarn test",
    "clean": "lerna run clean --parallel --no-bail",
    "clean:build": "yarn clean && yarn build",
    "clean:build:test": "yarn clean:build && yarn test",
    "lerna:link": "lerna run lerna:link --parallel",
    "lerna:publish": "lerna publish",
    "lerna:version": "lerna version --conventional-commits --yes",
    "start": "lerna run start --parallel",
    "start:dev": "lerna run start:dev --parallel --no-bail",
    "start:dev:build": "yarn clean && yarn build:install && lerna run start:dev --parallel --no-bail",
    "start:pm2": "yarn clean:build && lerna run start:pm2 --parallel --since main",
    "test": "lerna run test --parallel"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eyzi/beatrice.git"
  },
  "author": "Eyzi",
  "private": true,
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/eyzi/beatrice/issues"
  },
  "homepage": "https://github.com/eyzi/beatrice#readme",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.13",
    "@types/sinon": "^10.0.2",
    "chai": "^4.3.4",
    "lerna": "^4.0.0",
    "mocha": "^9.0.3",
    "nyc": "^15.1.0",
    "sinon": "^11.1.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  }
}
